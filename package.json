{
  "name": "flux-node-manager",
  "version": "1.1.0",
  "description": "Professional monitoring and management tool for Flux Nodes. Developed by SfilD Labs with Gemini AI assistance.",
  "main": "monitor-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder && node package-bundle.js",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.flux.nodemanager",
    "productName": "FluxNodeManager",
    "extraFiles": [
      {
        "from": "settings.dist.ini",
        "to": "settings.ini"
      },
      "docs",
      "LICENSE.txt",
      "clean-session.bat"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "dir"
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE.txt",
      "artifactName": "${productName}_Setup_${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}_Portable_${version}.${ext}"
    }
  },
  "author": "SfilD Labs",
  "license": "Apache-2.0",
  "devDependencies": {
    "archiver": "^5.3.1",
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1"
  },
  "dependencies": {
    "ini": "^4.1.2",
    "node-fetch": "^2.7.0"
  }
}
